<?xml version="1.0" encoding="utf-8"?>
<com.starts.hencoderview.view.TestLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <com.starts.hencoderview.view.TestLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:background="@color/blue_300"
        android:orientation="horizontal">

        <com.starts.hencoderview.view.TestTextView
            android:id="@+id/tvShort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="现在我是个短文字"
            android:padding="20dp"
            android:background="@color/red_300" />

        <com.starts.hencoderview.view.TestTextView
            android:id="@+id/tvRight"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@color/orange_300" />


    </com.starts.hencoderview.view.TestLinearLayout>

    <com.starts.hencoderview.view.TestLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/blue_grey_300"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

    </com.starts.hencoderview.view.TestLinearLayout>

</com.starts.hencoderview.view.TestLinearLayout>